{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DIVM Verification Report v1",
  "type": "object",
  "required": ["evidence_id","status","verdict","metrics","checks","verified_at"],
  "properties": {
    "evidence_id": { "type": "string" },
    "status": { "type": "string", "enum": ["received","validating","verified","failed"] },
    "verdict": { "type": "string", "enum": ["compliant","non_compliant","needs_review"] },
    "metrics": {
      "type": "object",
      "properties": {
        "ci": { "type": "number" },
        "cv": { "type": "number" },
        "icc": { "type": "number" }
      }
    },
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["check","pass"],
        "properties": {
          "check": { "type": "string" },
          "pass": { "type": "boolean" },
          "details": { "type": "string" }
        }
      }
    },
    "report": { "type": "object" },
    "verified_at": { "type": "string" }
  }
}
